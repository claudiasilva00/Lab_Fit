<Page x:Class="Lab_Fit.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab_Fit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <Grid>
        <Label Foreground="{DynamicResource PrimaryTextColor}" HorizontalAlignment="Left" Margin="50,50,0,0" Content="Theme" VerticalAlignment="Top"/>
        <ComboBox x:Name="theme_select" HorizontalAlignment="Left" Margin="108,53,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" Foreground="{DynamicResource PrimaryTextColor}" BorderBrush="{DynamicResource PrimaryTextColor}">
            <ComboBoxItem Content="Light" Unselected="ComboBoxtem_Selected_1"/>
            <ComboBoxItem Content="Dark" Unselected="ComboBoxItem_Selected"/>
        </ComboBox>

    </Grid>
</Page>
